<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent" android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:gravity="center_vertical">
    <ImageView
        android:id="@+id/iv_download_item_icon"
        android:layout_width="90dp"
        android:layout_height="90dp"
        android:layout_marginTop="4dp"
        android:scaleType="fitXY"
        android:layout_margin="@dimen/simple_4dp"/>
    <LinearLayout
        android:layout_width="0dp"
        android:layout_weight="4"
        android:gravity="center_vertical"
        android:background="@drawable/bg_progress_bar"
        android:layout_height="30dp"
        android:orientation="horizontal">
        <ProgressBar
            android:id="@+id/pb_download_item_progress"
            android:layout_marginStart="20dp"
            android:layout_marginEnd="@dimen/simple_10dp"
            android:layout_width="0dp"
            style="?android:attr/progressBarStyleHorizontal"
            android:layout_weight="8"
            android:layout_height="10dp" />
        <TextView
            android:id="@+id/tv_download_item_size"
            android:gravity="center"
            android:textSize="8sp"
            android:layout_weight="0.5"
            android:layout_width="35dp"
            android:layout_marginEnd="@dimen/simple_10dp"
            android:layout_height="wrap_content" />
    </LinearLayout>
    <FrameLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="13dp"
        android:layout_marginEnd="10dp">
        <TextView
            android:id="@+id/tv_download_state"
            android:textSize="@dimen/normal_textSize"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
        <ImageView
            android:id="@+id/iv_download_ctrl_btn"
            style="@style/normal_image_view"/>
    </FrameLayout>

</LinearLayout>
