<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent" android:layout_height="120dp"
    android:orientation="horizontal">

    <com.systekcn.guide.custom.RoundImageView
        android:id="@+id/museumListIcon"
        android:layout_width="0dp"
        android:layout_weight="2"
        android:layout_height="match_parent"
        android:scaleType="fitXY"
        android:layout_margin="5dp"
        android:layout_alignParentTop="true"/>

    <LinearLayout
        android:layout_width="0dp"
        android:layout_weight="3"
        android:layout_height="match_parent"
        android:orientation="vertical">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:gravity="center"
                android:orientation="horizontal">
                <RelativeLayout android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center_vertical"
                    android:layout_gravity="center_vertical">
                    <TextView
                        android:id="@+id/museumName"
                        android:layout_marginLeft="@dimen/simple_4dp"
                        android:layout_gravity="center_vertical"
                        android:textColor="@color/md_red_400"
                        style="@style/normal_text_view"
                        android:layout_alignParentLeft="true"
                       />
                    <TextView
                        android:layout_alignParentRight="true"
                        android:layout_marginRight="@dimen/simple_4dp"
                        style="@style/normal_text_view"
                        android:layout_gravity="center_vertical"
                        android:id="@+id/museumFlagIsDownload"/>
                </RelativeLayout>
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:orientation="horizontal">
                <TextView
                    android:layout_gravity="center_vertical"
                    style="@style/normal_text_view"/>
                <TextView
                    android:layout_marginLeft="@dimen/simple_4dp"
                    android:id="@+id/museumListOpenTime"
                    style="@style/normal_text_view"
                    android:layout_gravity="center_vertical"
                   />
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1">
                <TextView
                    style="@style/normal_text_view"
                    android:layout_gravity="center_vertical"/>

                <TextView
                    android:id="@+id/museumImportantAlert"
                    style="@style/normal_text_view"
                    android:layout_marginLeft="@dimen/simple_4dp"
                    android:textColor="@color/md_red_400"
                    android:layout_gravity="center_vertical"/>

            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_marginLeft="@dimen/simple_4dp"
                android:layout_weight="1">

                <TextView
                    style="@style/normal_text_view"
                    android:layout_gravity="center_vertical"/>

                <TextView
                    android:id="@+id/museumAddress"
                    android:layout_width="match_parent"
                    style="@style/normal_text_view"
                    android:layout_gravity="center_vertical"/>
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1">

                <TextView
                    style="@style/normal_text_view"
                    android:layout_gravity="center_vertical"/>

                <TextView
                    android:id="@+id/museum_consumption_per"
                    style="@style/normal_text_view"
                    android:layout_gravity="center_vertical"/>
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:gravity="right">
                <TextView
                    android:textColor="@color/md_red_400"
                    style="@style/normal_text_view"
                    android:text="book_ticket"
                    android:layout_marginRight="@dimen/simple_4dp"
                    android:layout_gravity="center_vertical"/>
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>
</LinearLayout>
